<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <!--<item name="actionBarStyle">@color/sub_main_orange</item> -->

        <item name="colorPrimary">@color/sub_main_orange</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/sub_main_orange</item>
        <item name="android:progressDrawable">@color/sub_main_orange</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
        which is used to tint widgets -->
        <item name="colorAccent">@color/main_orange</item>
        <item name="android:actionBarTabBarStyle">@color/main_orange</item>
        <item name="android:navigationBarColor">@color/main_orange</item>
        <item name="android:colorPrimaryDark">@color/main_orange</item>

    </style>


    <style name="MyActionBarTabStyle" parent="Widget.IconPageIndicator">
        <item name="android:background">@color/main_orange</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="CustomSeekBar" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/styly_bar</item>
        <item name="android:indeterminateDrawable">@drawable/styly_bar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>

</resources>
