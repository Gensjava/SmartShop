<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_catygory"
        android:id="@+id/main_category_image"
        android:scaleType="center"
        android:background="@android:color/background_light"
        android:layout_weight="0"/>

    <Space
        android:layout_width="20px"
        android:layout_height="40dp"
        android:background="@android:color/background_light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_category_text"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:gravity="fill_vertical"
        android:background="@android:color/background_light"
        android:layout_weight="0.7"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.7"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:clickable="true"
        style="@android:style/Widget.ActionButton">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_arrow"
            android:id="@+id/main_category_all_arrow"
            android:scaleType="center"
            android:background="@android:color/background_light"
            android:layout_gravity="left"
            android:layout_margin="0dp"
         />

        <TextView
            android:id="@+id/main_category_counter"
            android:layout_width="wrap_content"
            android:minWidth="30sp"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/main_category_all_arrow"
            android:layout_alignRight="@id/main_category_all_arrow"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:paddingBottom="1dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:visibility="invisible"
            android:background="@drawable/rounded_square"
            android:gravity="center"/>

    </RelativeLayout>


</LinearLayout>