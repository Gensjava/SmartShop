<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/cv"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:id="@+id/main_product_item_imege"
                android:src="@drawable/ic_action_cart"
                android:background="@android:color/background_light"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/main_product_item_name"
                android:textSize="12sp"
                android:layout_below="@+id/main_product_item_imege"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_product_item_price"
                    android:textColor="@color/main_orange"
                    android:layout_below="@+id/main_product_item_name"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:text="New Text"
                android:id="@+id/textView13"
                android:layout_below="@+id/main_product_item_price"
                android:layout_alignParentLeft="true"

                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_product_item_by"
                android:src="@drawable/ic_action_by_a"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_product_share"
                android:src="@drawable/ic_action_procent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_product_new_goods"
                android:src="@drawable/ic_action_new_goods"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
