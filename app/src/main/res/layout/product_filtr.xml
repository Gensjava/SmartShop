<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_filtr_spinner"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:visibility="invisible"
        android:id="@+id/product_filtr_textView"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:enabled="false"
        android:layout_alignParentLeft="false"
        android:textColor="@android:color/darker_gray"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_filtr_checkBox"
        android:singleLine="false"
        android:textSize="14dp"
        android:elegantTextHeight="false"
        android:visibility="invisible"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/product_filtr_seekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

     <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:visibility="invisible"
        android:id="@+id/product_filtr_switch_end"
        android:layout_alignParentEnd="false"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_cancel"
        android:visibility="invisible"
        android:id="@+id/product_filtr_button_del"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_ok"
        android:visibility="invisible"
        android:id="@+id/product_filtr_button_run"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="5dp"/>

</RelativeLayout>