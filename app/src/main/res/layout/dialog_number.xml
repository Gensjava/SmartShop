<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Цена"
            android:id="@+id/textView6"
            android:gravity="center|fill_vertical"
            android:layout_weight="0.33"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Количество"
            android:id="@+id/textView7"
            android:gravity="center"
            android:layout_weight="0.33"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Сумма"
            android:id="@+id/textView8"
            android:layout_weight="0.33"
            android:autoText="false"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="price"
            android:id="@+id/dialog_number_price"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:src="@drawable/ic_launcher_minus"
            android:id="@+id/dialog_number_minus"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="1.0"
            android:id="@+id/dialog_number_number"
            android:layout_weight="0.3"
            android:gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:src="@drawable/ic_launcher_plus"
            android:id="@+id/dialog_number_plus"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Sum"
            android:id="@+id/dialog_number_sum"
            android:layout_weight="0.25"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    <![CDATA[]]>
</LinearLayout>