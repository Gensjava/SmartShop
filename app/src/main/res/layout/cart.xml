<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="seller"
        android:id="@+id/cart_position_textView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:id="@+id/cart_delete_button"
        android:src="@drawable/ic_launcher_cancel"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/cart_imageView"
            android:alpha="100"/>

      
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="discription"
                android:id="@+id/cart_discription_textView" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:gravity="center|center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Цена"
            android:id="@+id/textView2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Количество"
            android:id="@+id/textView3"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Сумма"
            android:id="@+id/textView4"
            android:layout_weight="0.33"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="1"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="price"
            android:id="@+id/cart_price_textView"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:src="@drawable/ic_launcher_minus"
            android:id="@+id/cart_minus_button"
            android:gravity="center_vertical|center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="number"
            android:id="@+id/cart_number_textView"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:text="+"
            android:onClick="onClick"
            android:id="@+id/cart_plus_button"
            android:src="@drawable/ic_launcher_plus"
            android:gravity="center_vertical|center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Sum"
            android:id="@+id/cart_sum_textView"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"/>
    </LinearLayout>

</LinearLayout>