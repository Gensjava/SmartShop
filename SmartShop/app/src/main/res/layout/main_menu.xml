<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/sub_main_orange"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header"
            android:id="@+id/main_menu_image_header"
            android:layout_alignParentEnd="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gens-gens@mail.ru"
            android:id="@+id/textView12"
            android:textColor="@android:color/background_light"
            android:layout_alignBottom="@+id/main_menu_image_header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="false"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_menu_image_account"
            android:src="@drawable/ic_account_circle_white_48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Янчев Геннадий"
            android:id="@+id/main_menu_email"
            android:textColor="@android:color/background_light"
            android:textSize="22dp"
            android:layout_above="@+id/textView12"
            android:layout_alignLeft="@+id/main_menu_image_account"
            android:layout_alignStart="@+id/main_menu_image_account"
            android:layout_alignRight="@+id/main_menu_image_header"
            android:layout_alignEnd="@+id/main_menu_image_header"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

</LinearLayout>